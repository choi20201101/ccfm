{
  "name": "ccfm",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild"]
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @ccfm/core dev",
    "dev:web": "pnpm --filter @ccfm/web dev",
    "test": "pnpm -r test",
    "test:core": "pnpm --filter @ccfm/core test",
    "test:web": "pnpm --filter @ccfm/web test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r tsc --noEmit",
    "clean": "pnpm -r clean"
  }
}
